import bookService from '../services/book.service.js'
import bookDetails from '../pages/book-details.js';

export default {
    data() {
        return {
            books: null,
            show: false
        }
    },
    methods: {
        addBook() {
            bookService.addBookFromApi()
            .then(books => {
                this.books = books;
            })
        }
    },
        template: `
        <section>
            <input @input="addBook()"/>
            <ul v-for="book in books">
                <li>{{book.volumeInfo.title}}</li>
            </ul>
        </section>
    `
    }

